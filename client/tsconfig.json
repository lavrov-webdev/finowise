{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["DOM", "ES2021"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@system/*": ["./src/system/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@modules/*": ["./src/modules/*"]
    }
  },
  "include": ["src"]
}
